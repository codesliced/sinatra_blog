<div class="container">
<div class="single_post">
  <h3><%=@post.title%></h3>
  <p><%=@post.content%></p>
  <p>User: <%=@post.author%></p>
  <p> <div class="tags_single">Tags:
        <% @post.tags.each do |tag| %>
          <a href="#"><span class="tag_single"><%= tag.tag_name %></span></a>
        <% end %>
      </div>



  <p>Created at: <%=@post.created_at%></p>

  <form action='/destroy/<%=@post.id%>' method='post'>
  <input type='submit' value='Delete'>
  </form>  
  <br>
  <br>
